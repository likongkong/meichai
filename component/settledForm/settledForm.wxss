.borderbottom1{
  border-bottom:2rpx solid #F5F5F5;
}
.flex{
  display: flex;
  align-items: flex-end;
}
.marginTB25{
  margin: 25rpx 0;
}
.paddingL80{
  padding-left: 80rpx !important;
  box-sizing: border-box;
}
.paddingBottom12{
  padding-bottom: 12rpx !important;
}
.paddingBottom20{
  padding-bottom: 20rpx !important;
}
/* 行样式 */
.rowWrap{    
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.rowWrap .cEveTitle{
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}
.rowWrap .cEveInput{
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #777777;
  padding-left: 12rpx;
  box-sizing: border-box;
  text-align: right;
}
.editIcon{
  width: 40rpx;
  height: auto;
}
/* 列样式 */
.columnWrap{
  width: 100%;
  padding: 24rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}
.columnWrap .cEveTitle{
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.columnWrap .cEveTitle image{
  width: 28rpx;
  height: auto;
  margin-left: 12rpx;
}
.columnWrap .cEveInput{
  height: 75rpx;
  font-size: 26rpx;
  color: #777777;
  padding-left: 12rpx;
  box-sizing: border-box;
}
/* 发布样式 */
.card{
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: 24rpx;
}
.actionSheetIcon{
  width: 20rpx;
  height: auto;
  margin-left: 6rpx;
}
.activityimageWrap{
  overflow: hidden;
}
.activityimageWrap .itemImage{
  float: left;
  margin: 18rpx 12.6rpx 18rpx 0;
}
.activityimageWrap .itemImage:nth-child(4n){
  margin-right: 0;
}

.uploadWrap{
  width: 168rpx;
  height: 168rpx;
  margin: 18rpx 0;
  background: #F4F3F8;
  position: relative;
  display: flex ;
  justify-content: center;
  align-items: center;
}
.uploadBox{
  width: 168rpx;
  height: 168rpx;
  background: #F4F3F8;
  display: flex ;
  justify-content: center;
  align-items: center;
}
.placeholderBox{
  width: 100rpx;
  height: 80rpx;
  position: relative;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.placeholderBox image{
  width: 34rpx;
  height: auto;
}
.placeholderBox::after{
  content: '添加';
  width: 60rpx;
  position: absolute;
  top: 70rpx;
  left: 50%;
  margin-left: -30rpx;
  font-size: 20rpx;
  color: #A2A19F;
}
.textarea{
  width: 100%;
  font-size: 24rpx;
  color: #777777;
  min-height: 200rpx;
  background-color: #F4F3F8;
  margin: 18rpx 0;
  padding: 20rpx;
  box-sizing: border-box;
}
.tupian{
  display: block;
  width: 168rpx;
  height: auto;
}
.uploadAgainText{
  background:#8BCFFD;
  display: inline-block;
  font-size: 26rpx;
  border-radius: 6rpx;
  color: #ffffff;
  padding: 6rpx 10rpx;
  margin-left: 20rpx;
}
.radioWrap view{
  display: flex;
  align-items: center;
  margin-top: 14rpx;
}
.itemName{
  font-size: 28rpx;
  margin-left: 20rpx;
}
.radioChecked{
  width: 8rpx;
  height: 8rpx;
  border: 10rpx solid #101010;
  border-radius: 100%;
  display: block;
}
.radioUnchecked{
  width: 24rpx;
  height: 24rpx;
  display: block;
  border: 2rpx solid #101010;
  border-radius: 100%;
}
