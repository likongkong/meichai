						</image>
					</swiper-item>
				</swiper>
		</view>	
    <!-- 日期 -->
		<view class="ptcconTimeData">
		     <view wx:for='{{dateDate}}' wx:key='key' class="ptcTdeve {{index==1?'ptcTdeveborder':''}} {{checkid==item.id?'checkid':''}}" catchtap="clickcheck" data-id='{{item.id}}'>{{item.name}}</view>
		</view>
    <!-- 打卡奖励 -->
		<view class="punchInRewardtxt">—————— 打卡奖励 ——————</view>
