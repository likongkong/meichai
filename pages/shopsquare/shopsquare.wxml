						</view>
				    <!-- <view class="punCheveSrcTxt">打开x10</view> -->
						<view class="punSrRTxt" wx:if='{{index%2==1}}'>可领取</view>
						<view class="punSrRTxt" style="background:#757575;" wx:else>已抢光</view>

				</view>
		</scroll-view>
	
	  <!-- 打卡奖励 -->
		<view class="punchInRewardtxt">—————— 打卡点 ——————</view>
		<view class="punchInReward">
         <view class="punchInReEve" wx:for='{{imgdata}}' wx:key='key' style="{{index%4==3?'margin: 0 0 20rpx 0;':''}}">
				     <image class="pInReEveImg" mode="aspectFit" src="{{item.src}}"></image>
						 <!-- 头像 -->
						 <image class="pInReEveImgLogo" mode="aspectFit" src="{{item.src}}"></image>
						 <!-- 审核中 -->
						 <view wx:if='{{index%3==2}}' class="pcIRBtxt" style="background:#32acfb;">审核中</view>
						 <!-- 未通过 -->
						 <view wx:elif='{{index%3==1}}' class="pcIRBtxt" style="background:#fb595f;">未通过</view>
						 <!-- 通过 -->
						 <image wx:else src="https://cdn.51chaidan.com/images/sign/duihao.png" mode="aspectFit" class="punapproved"></image>
				 </view>
		</view>
	  <!-- 打卡记录 -->
		<view class="punchInRewardtxt">—————— 打卡记录 ——————</view>
 
    <view class="punchInRecord">
		    <view class="punchInRBox" wx:for='{{imgdata}}' wx:key='key' >
				   <image class="punchInRImg" src="{{item.src}}" mode="aspectFit" style="border-radius:50%;margin-right: 10rpx;"></image>
					 <view class="punchInRTxt specialellipsis">{{item.name}}</view>
					 <image class="punchInRImg" src="{{item.src}}" mode="aspectFit" style="margin-left: 10rpx;"></image>
				</view>
		</view>


	  <view class="punchBottom">
		   <view class="punchBottomtxt">已打卡</view>
			 <view class="punchBotImgBox" style="width:{{50+imgdata.length*15>530?'530':50+imgdata.length*15}}rpx;">
			    <image class="punchBotImg" wx:for='{{imgdata}}' wx:key='key' src="{{item.src}}" style="z-index:{{index+1}};left:{{index*15}}rpx;" wx:if='{{index*15<480}}'></image>
			 </view>
			 <view class="punchBottomtxt">x{{imgdata.length}}</view>
		</view>

</view>
	
	

	
