@import "../../../../pages/signin/signin.wxss";
@import "../../../../common/newcoupon.wxss";
@import "../../../../common/tabbar.wxss";


page{
  background: #f4f5f9;
}

.red{
  background:linear-gradient(to right,#f9657d,#fe2842)
}
.blue{
  background:linear-gradient(to right,#75d0e3,#388ab2)
}
.yellow{
  background:linear-gradient(to right,#f3eca3,#f2d53a)
}

.infoBox{
  padding: 60rpx 35rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 25rpx;
  font-size: 52rpx;
}

.grayWrap{
  /* background: #F8657C; */
  font-size: 26rpx;
  color: #fff;
  padding: 0 35rpx;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.rcUserInfo{
  padding: 60rpx 35rpx;
  box-sizing: border-box;
  background: #fff;
  /* margin-bottom: 25rpx; */
}
.rcUserInfo view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 100rpx;
}
.rcUserInfo view:last-child{
  margin-bottom: 0;
}
.rcUserInfo view text{
  display: block;
}
.rcUserInfo view text:first-child{
  color: #8A8A8A;
  font-size: 32rpx;
  width: 30%;
}
.rcUserInfo view text:last-child{
  width: 70%;
  font-size: 32rpx;
  color: #101010;
}
.hyBtn{
  width: 90%;
  height: 80rpx;
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  background: #F8657C;
  font-size: 30rpx;
  color:#fff;
  border-radius: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-left: -45%;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
}