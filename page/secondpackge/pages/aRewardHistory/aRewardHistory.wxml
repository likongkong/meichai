<t_f title='{{c_title}}' arrow='{{c_arrow}}' backcolor='{{c_backcolor}}'></t_f>
<view style='width:100%;height:{{statusBarHeightMc}}px;'></view>

<view class="main" style="min-height:{{history.length != 0?windowHeight:'0'}}px;padding:0 36rpx {{history.length != 0?(todayActivity.length != 0?'370':'120'):'0'}}rpx 36rpx;"> 
  <text class="title">刮卡记录</text>
  <view class="record">
    <block wx:for="{{history}}" wx:key='key' wx:for-item="item">
      <view class="recordbox">
        <view class="recordinfo">
          <image class="avatar" src="{{item.litpic}}" mode="widthFix"></image>
          <view style="{{item.gear == '终'?'color: #ff2742':'color: #83c530'}}">
            刮到了  <text>{{item.gear == '终'?'最'+item.gear:item.gear}}</text>赏  <text style="{{item.gear == '终'?'color: #ff2742':'color: #83c530'}}" class="good_name">{{item.title}}</text>
          </view>
        </view>
        <view class="time">
          <text style="{{item.gear == '终'?'color: #ff2742':'color: #83c530'}}">{{item.insert_time}}</text>
        </view>
      </view>
    </block>
  </view>
</view>

<view wx:if="{{todayActivity.length != 0}}" class="donebox">
  <view class="done"> 
    <text class="title">已完成一番赏</text>
    <scroll-view scroll-x>
      <block wx:for="{{todayActivity}}" wx:key='key' wx:for-item="item">
        <view class="card" data-id="{{item.id}}" bindtap="toARewardHistoryPage">
          <image class="pic" src="{{item.cover}}" mode="aspectFill"></image>
          <text>Vol.{{item.id}}</text>
        </view>
      </block>
    </scroll-view>
  </view>
</view>

<bnavigation isChar='{{false}}' isProduce='{{isProduce}}' isIphoneX ='{{isIphoneX}}' shopnum='{{shopnum}}' 
dryinglistnum='{{dryinglistnum}}'></bnavigation>

