.main{
  box-sizing: border-box;
}
.main .title{
  display: block;
  height: 110rpx;
  line-height: 110rpx;
  color: #000;
  font-size: 26rpx;
}
.recordbox{
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  margin-bottom: 10rpx;
  overflow: hidden;
}
.recordbox text{
  line-height: 60rpx;
  display: inline-block;
}
.recordbox .avatar{
  width: 60rpx;
  height: auto;
  margin-right: 14rpx;
  float: left;
}
.recordbox .good_name{
  width: 190rpx;
  font-size: 22rpx;
  line-height: 60rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  float: left;
  margin-left: 20rpx;
}
.recordbox .gear{
  font-size: 24rpx;
  float: left;
}


.recordbox .time{
  width: 260rpx;
  font-size: 24rpx;
  float: right;
}
.recordbox .time text{
  float: right;
}

.donebox{
  width: 710rpx;
  height: 240rpx;
  position: fixed;
  bottom: 110rpx;
  left: 20rpx;
  z-index: 10;
  background: #fff;
}
.done{
  width: 100%;
  height: 220rpx;
  border-radius: 8rpx;
  box-shadow: 1px 4px 8px #999999;
  overflow:hidden;white-space:nowrap;
}
.done scroll-view{
  padding: 0 18rpx;
  box-sizing: border-box;
}
.done .title{
  height: 62rpx;
  line-height: 62rpx;
  display: block;
  color: #000;
  font-size: 26rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
}
.done .card{
  width: 268rpx;
  height: 142rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  display: inline-block;
  margin-right: 14rpx;
}
.done .card:last-child{
  margin-right: 0;
}
.done .card .pic{
  width: 268rpx;
  height: 142rpx;
}
.done .card text{
  width: 148rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 10rpx;
  left: 4rpx;
  display: block;
  background: rgba(0,0,0,.6);
  border-radius: 10rpx;
  color: #fff;
}