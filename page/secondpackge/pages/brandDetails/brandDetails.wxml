						</view>
					</view>
					<view style="width:100%;height:46rpx;">
						<image class="exhshopimg" mode='aspectFit' src="{{item.brandLogo}}"></image>
						<view class="specialellipsis" style="height:46rpx;line-height:46rpx;font-size:22rpx;float:left;margin-left:3rpx;width:160rpx;">{{item.brandName}}</view>
