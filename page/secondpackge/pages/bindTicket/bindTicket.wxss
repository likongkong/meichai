@import "../../../../pages/signin/signin.wxss";
@import "../../../../common/newcoupon.wxss";
@import "../../../../common/tabbar.wxss";


page{
  background: #f4f5f9;
}

.textDecoration{
  text-decoration:line-through;
}
.timetextstyle{
  font-size: 26rpx;
  color: #fff;
}
.ticketsWrap{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
}
.ticketsItemactive{
  position: relative;
}
.ticketsItemactive::after{
  content: '';
  width: 210rpx;
  height: 260rpx;
  position: absolute;
  top: 0;
  left: 0;
  border: 6rpx solid rgba(205, 131, 54, 100);
  border-radius: 12rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);

}
.ticketsItem{
  width: 216rpx;
  height: 266rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 0 10rpx;
  padding: 40rpx 0; 
  box-sizing: border-box;
}

.ticketsItem text{
  display: block;
  width: 100%;
  text-align: center;
}
.takepartWrap{
  padding:35rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.inputWrap{
  width: 65.5%;
  height: 76rpx;
  background: #fff;
  border: 2rpx solid #BBBBBB;
  border-radius: 8rpx;
}
.inputWrap input{
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #101010;
}
.activateBtn{
  width: 31%;
  height: 76rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  background: #F8657C;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 76rpx;
  border-radius: 8rpx;
}

.tabWrap{
  width: 100%;
  background: #fff;
  padding: 24rpx 0;
  margin-top: 24rpx;
}
.tabBtnWrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 24rpx;
}

.tabBtnWrap view {
  font-size: 30rpx;
  color: #101010;
  border:2rpx solid  #8A8A8A;
  width:180rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
}

.active1 {
  color: #fff !important;
  background: #8A8A8A;
}

.bindUserInfoWrap{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bindUserInfoBox{
  width: 580rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 70rpx 60rpx 40rpx;
  box-sizing: border-box;
}
.rucInfo text{
  display: block;
}
.userInfoWrap{
  border-top: 2rpx solid #F4F4F4;
  margin-top: 30rpx;
  padding: 35rpx 0;
}
.userInfoInput{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.userInfoInput:last-child{
  margin-bottom: 0 !important;
}
.userInfoInput text{
  width: 160rpx;
  font-size: 26rpx;
  display: block;
}
.userInfoInput input{
  border: 2rpx solid #BBBBBB;
  height: 60rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.bindUserTicket{
  width: 300rpx;
  height: 80rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  background: #F8657C;
  border-radius: 10rpx;
  margin: 0 auto;
}

.detailimg image {
  display: block;
  width: 100%!important;
}

.wxParse-inline{font-size:30rpx;}


.twiceConfirmMask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.twiceConfirmBox{
  width: 478rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 35rpx 35rpx;
  box-sizing: border-box;
}
.twiceConfirmBox text{
  display: block;
  font-size:26rpx;
  color:#101010;
}
.twiceConfirmBox text:first-child{
  text-align: center;
  margin-bottom: 35rpx;
}
.confirm{
  width: 266rpx;
  height: 66rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 66rpx;
  text-align: center;
  background: #F8657C;
  border-radius: 10rpx;
  margin: 50rpx auto 0;
}