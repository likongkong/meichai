}

.exhibdxtxttitle {
  height: 40rpx;
  line-height: 40rpx;
  width: 220rpx;
  float: left;
}

.exhibdxtxtadd {
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #fff;
  float: right;
  margin-right: 15rpx;
}

.dismtbcctxthead {
  width: 100%;
  line-height: 40rpx;
}

.arrow {
  display: inline-block;
  width: 15px;
  height: 15px;
  border-top: 2px solid white;
  border-right: 2px solid white;
}

.arrow-left {
  transform: rotate(-135deg);
}

.arrow-right {
  transform: rotate(45deg);
}

.btnstyle {
  width: 300rpx;
