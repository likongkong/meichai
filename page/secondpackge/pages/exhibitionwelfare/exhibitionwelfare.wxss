.countdown {
  background: #000;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.timetextstyle {
  display: inline-block;
  font-size: 25rpx;
}

.numstyle {
  width: 50rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  background: #000;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -15rpx;
  margin: 0 auto;
  opacity: 0.7;
