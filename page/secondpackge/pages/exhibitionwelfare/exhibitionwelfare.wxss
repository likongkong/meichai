  color: white;
  font-size: 20rpx;
}

.sharenum {
  color: #fff;
  border-radius: 15rpx;
  font-size: 20rpx;
  position: absolute;
  right: -13rpx;
  top: -13rpx;
  background:#ff2742;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  z-index: 1;
  text-align: center;
  line-height: 30rpx;
  background: #ff2742;
  
}

.nsswiperdetail {
