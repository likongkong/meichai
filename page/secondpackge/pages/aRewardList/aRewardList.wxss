.progress-box{
  position: relative;
  /* border-radius: 0 0 10rpx 10rpx; */
  overflow: hidden;
}
.progress-box text{
  display: inline-block;
  height: 24rpx;
  line-height: 24rpx;
  position: absolute;
  top: 0;font-size: 20rpx;
  color: #fff;
}
.cardBbox{
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.cardBbox view{
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
  font-size: 24rpx;
  /* margin-top: 10rpx; */
}
.cardBbox .title{
  width: 460rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: center;
}