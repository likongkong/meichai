.card{
  width: 720rpx;
  margin: 0 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  box-shadow: 1px 2px 6px #999999;
  border-radius: 10rpx;
  overflow: hidden;
}
.cardTbox{
  width: 100%;
  /* height: 308rpx; */
  position: relative;
  display: flex;
  justify-content: space-between;
}
.cardTbox .gearitem{
  width: 24.8%;
}
.cardTbox .gearitem image{
  width: 100%;
  height: 178.54rpx;
  /* border-radius: 10rpx; */
  display: block;
}
.cardTbox .gearitem .gearnum{
  padding: 16rpx 0;
  box-sizing: border-box;
 width: 100%;
 display: flex;
 justify-content: center;
}
.cardTbox .gearitem .gearnum text{
  padding: 6rpx 8rpx;
  background: rgba(0,0,0,.5);
  border-radius: 8rpx;
  color: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  display: inline-block;
}
