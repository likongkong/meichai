.main{
  padding: 0 0 20rpx 0;
}
.card{
  width: 720rpx;
  margin: 0 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  box-shadow: 1px 2px 6px #999999;
  border-radius: 10rpx;
  overflow: hidden;
}
.cardTbox{
  width: 100%;
  height: 384rpx;
  position: relative;
}
.cardTbox .serialnum{
  display: block;
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  padding: 8rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0,0,0,.5);
}
.cardTbox .pic{
  width: 100%;
  height: 384rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.cardTbox .reward-num{
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  padding: 12rpx 16rpx;
  box-sizing: border-box;
  background: rgba(0,0,0,.5);
}
.cardTbox .reward-num text{
  height: 40rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  display: block;
  opacity: .8;
}
.progress-box{
  position: relative;
  /* border-radius: 0 0 10rpx 10rpx; */
  overflow: hidden;
}
.progress-box text{
  display: inline-block;
  height: 24rpx;
  line-height: 24rpx;
  position: absolute;
  top: 0;font-size: 20rpx;
  color: #000;
}
.cardBbox{
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.cardBbox view{
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
  font-size: 24rpx;
  /* margin-top: 10rpx; */
}