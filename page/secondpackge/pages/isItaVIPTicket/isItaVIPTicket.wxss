.artworkItem{
  width: 50%;
  display: inline-block;
  margin-bottom: 50rpx;
}
.previewImage{
  width: 100%;
}
.previewImage image{
  width: 100%;
  height: auto;
}
.artworkItem .details{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.artworkItem .details text{
  display: block;
  text-align: center;
  font-weight:bold;
  margin: 6rpx 0;
}
.artworkItem .details .product-desc,.artworkItem .details .artwork-desc,.artworkItem .details .color-desc{
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-transform: capitalize;
}
.artworkItem .details .product-desc{
  color: #000;
}
.artworkItem .details .artwork-desc,.artworkItem .details .color-desc{
  color: rgba(0,0,0,.45);
}
.artworkItem .details .price{
  font-size: 30rpx;
  color: #000;
}