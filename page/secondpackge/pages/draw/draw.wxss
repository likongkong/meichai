/* page/secondpackge//pages/aRewardDetails/aRewardDetails.wxss */
@import "../../../../pages/signin/signin.wxss";
@import "../../../../common/newcoupon.wxss";
@import "../../../../common/tabbar.wxss";

page{
  background:#f4f5f9;
  padding-bottom: 230rpx;
}

.banner{
  width: 100%;
  height: 200rpx;
}
.banner image{
  width: 100%;
  height: 200rpx;
}
.exchangeWrap{
  width: 720rpx;
  height: 384rpx;
  border-radius: 5px;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4); 
  margin: 15rpx;
  position: relative;
  overflow: hidden;
}
.exchangeBg{
  width: 720rpx;
  height: 384rpx;
  position: absolute;
  top: 0;
  left: 0;
  opacity: .4;
  z-index: -1;
}
.exchangeInputWrap{
  width: 580rpx;
  height: 65rpx;
  background: #fff;
  margin: 65rpx 70rpx 0;
  border: 2rpx solid rgba(187, 187, 187, 100);
  border-radius: 10rpx;
  background: rgba(255,255,255,.7);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.exchangeInputWrap input{
  width: 432rpx;
  height: 65rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-weight: bold;
}
.exchangeInputBox{
  color: #666666;
}
.exchangeInputWrap view{
  width: 135rpx;
  height: 52rpx;
  background: #E94F57;
  border-radius: 10rpx;
  text-align: center;
  line-height: 55rpx;
  font-size: 26rpx;
  color: #fff;
  margin: 0 6.5rpx;
}
.ticketNum{
  width: 300rpx;
  height: 55rpx;
  background: #E8E8E8;
  border-radius: 55rpx;
  color: #666666;
  font-size: 26rpx;
  text-align: center;
  line-height: 55rpx;
  display: block;
  margin: 20rpx auto 0;
}
.drawBtn{
  width: 580rpx;
  height: 65rpx;
  background: #E94F57;
  border-radius: 10rpx;
  text-align: center;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #fff;
  margin: 65rpx auto 0;
}
.awardWrap{
  width: 690rpx;
  margin: 0 30rpx;
}
.TopBox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 50rpx;
}
.awardWrapBox{
  width: 620rpx;
  margin: 20rpx auto 0;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.awardWrapBox>view{
  width: 190rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  display: inline-block;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}
.awardImg{
  width: 100%;
  height: 190rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  display: block;
}
.awardWrapBox>view view{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.awardWrapBox>view view text{
  color: #101010;
  font-size: 22rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
}
.drawRecordWrap{
  width: 690rpx;
  margin: 0 30rpx;
}
.prizeBtn{
  width: 580rpx;
  height: 65rpx;
  background: #E94F57;
  border-radius: 65rpx;
  text-align: center;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #fff;
  margin: 0 auto;
}