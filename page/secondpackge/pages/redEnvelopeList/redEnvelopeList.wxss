@import "../../../../pages/signin/signin.wxss";
@import "../../../../common/newcoupon.wxss";
@import "../../../../common/tabbar.wxss";
@import "../../../../pages/smokebox/smokebox.wxss";

page{
  background:#FEEEDF;
  padding-bottom: 230rpx;
}
.redListNoData{
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  font-size: 24rpx;
}
.relHead{
  width: 100%;
  font-size: 26rpx;
  height: 80rpx;
  text-align: center;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background: #fff;
}
.relHead view{
  flex-grow:1;
}
.relHeadColor{
  color: #298DF8;
  position: relative;
}
.relHeadColor::after{
  content: '';
  width: 130rpx;
  height: 8rpx;
  background:#298DF8;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -22rpx;
  margin: auto;
}
.relTip{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #C9823B;
  background:#FFECBF;
  font-size: 24rpx;
  text-align: center;
}
.relContent{
  width: 100%;
}
.relRedEveOne{
  width: 650rpx;
  height: 252rpx;
  background:#F89F3C;
  margin: 20rpx auto 0;
  border-radius: 6rpx;
  position: relative;
}
.relRedEveTwo{
  width: 650rpx;
  height: 252rpx;
  background: -webkit-linear-gradient(left,#F89F3C,#ED3820);
  background: -o-linear-gradient(left,#F89F3C,#ED3820);
  background: -moz-linear-gradient(left,#F89F3C,#ED3820);
  background: -mos-linear-gradient(left,#F89F3C,#ED3820);
  background: linear-gradient(left,#F89F3C,#ED3820);
  margin: 20rpx auto 0;
  border-radius: 6rpx;
  position: relative;
}
.eveClick{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.relRedEveTopImg{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 43rpx;
  left: 50rpx;
  z-index: 1;
}
.relRedEveTop{
  height: 180rpx;
  width: 100%;
  border-bottom: 2rpx solid #fff;
}
.relRedEveTopRight{
  float: right;
  height: 180rpx;
  width: 450rpx;
}
.rretrTop{
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 34rpx;
  margin-top: 33rpx;
}
.rretrCont{
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx; 
}
.relRedEveBottom{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 20rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #fff;
}
.relRedEveComplete{
  color: #fff;
  background: #B7B4B4;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 15rpx;
  border-radius: 0 6rpx 0 6rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}





















