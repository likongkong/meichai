/* page/secondpackge//pages/aRewardDetails/aRewardDetails.wxss */
@import "../../../../pages/signin/signin.wxss";
@import "../../../../common/newcoupon.wxss";
@import "../../../../common/tabbar.wxss";

page{
  /* background:#f4f5f9; */
  padding-bottom: 230rpx;
}

.formWrap{
  width: 640rpx;
  padding: 0 55rpx;
}
.formItemWrap{
  width: 100%;
  border-bottom: 2rpx solid #f7f7f7;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title{
  font-size: 26rpx;
  color: #101010;
  width: 140rpx;
}
.formItemInput{
  width: 500rpx;
  position: relative;
}
.formItemInput input{
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 26rpx;
}
.placeholderclass{
  color: #CECECE;
}
.pickerWrap{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  opacity: 0;
}
.formItemTime{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background:#F3F4F4;
  border: 2rpx solid #F3F4F4;
  color: #000;
  font-size: 26rpx;
  float: left;
  border-radius: 10rpx;
}
.pickerWrap view{
  width: 100%;
  height: 140rpx;
}
.active{
  background: #fff;
  border: 2rpx solid #000;
}
.disabled{
  border: 2rpx solid #F3F4F4;
  color: #999;
}

.bottomWrap{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  padding: 20rpx 55rpx 100rpx 55rpx; 
  box-sizing: border-box;
  background: #fff;
}
.bottomTxt{
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.btn{
  width: 100%;
  height: 80rpx;
  background: #E94F57;
  border-radius: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 26rpx;
}