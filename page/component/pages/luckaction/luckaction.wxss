page {
  background: #f5f6fa;
}

.swiper {
  height: 400rpx;
  width: 100%;
}

.slide-image {
  display: block;
  height: 100%;
  width: 100%;
}

.strategy {
  background: #ff6968;
  color: #fff;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 25rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.logo {
  background: #fff;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  border-radius: 10rpx;
}

.toptitle {
  font-size: 50rpx;
  text-align: center;
  color: #ff6968;
  font-weight: bold;
  position: absolute;
  top: 250rpx;
