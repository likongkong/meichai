.alreadytitle {
  font-size: 35rpx;
  text-align: center;
  font-weight: bold;
  margin-top: 20rpx;
}

.needtitle {
  font-size: 35rpx;
  text-align: center;
  font-weight: bold;
}

.schedule {
  width: 438rpx;
  height: 28rpx;
  margin: 6rpx;
  background: #e6e6e6;
  border-radius: 15rpx;
  float: right;
  font-size: 25rpx;
}

.schedulemeet {
  width: 279rpx;
  line-height: 28rpx;
