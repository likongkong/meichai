page{
  background:#f4f5f9;
}
.font28_101010{
  font-size: 28rpx;
  color: #101010;
}
.font28_909090{
  font-size: 28rpx;
  color: #909090;
}
.spaceBetween{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.spaceBetween image{
  width: 50rpx;
  height: auto;
}
.card{
  width: 730rpx;
  background: #ffffff;
  border-radius: 14rpx;
  margin: 20rpx auto 0 auto;
  padding: 18rpx 18rpx 30rpx 18rpx;
  box-sizing: border-box;
}
.title{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #101010;
  display: flex;
  align-items: center;
}
.subtitle{
  font-size: 24rpx;
  color: #909090;
  margin-top: 10rpx;
}  
.weightInputWrap{
  width: 562rpx;
  display: flex;
  border-radius: 14rpx;
  overflow: hidden;
  margin: 44rpx auto 22rpx auto;
}
.weightInputWrap view{
  height: 80rpx;
}
.weightInputWrap view:first-child{
  width: 164rpx;
  background: #DFDDDD;
  font-size: 90rpx;
  text-align: center;
  line-height: 66rpx;
}
.weightInputWrap view:nth-child(2n){
  width: 234rpx;
  background: #F5F5F5;
  position: relative;
}
.weightInputWrap view:nth-child(2n) input{
  width: 100%;
  height: 80rpx;
  text-align:center;
  font-size: 32rpx;
}
.weightInputWrap view:nth-child(2n) text{
  position: absolute;
  top: 22rpx;
  right: 24rpx;
  font-size: 28rpx;
}
.weightInputWrap view:last-child{
  width: 164rpx;
  background: #DFDDDD;
  font-size: 60rpx;
  text-align: center;
  line-height: 70rpx;
}

.labelWrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 32rpx;
}
.labelWrap .active{
  width: 200rpx;
  height: 60rpx;
  background: #CEEFFB;
  border: 2rpx solid #5CA7FE;
  color: #5CA7FE;
}
.labelWrap text{
  display: block;
  width: 204rpx;
  height: 64rpx;
  background: #F5F5F5;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 64rpx;
}
.customWrap{
  margin-top: 42rpx;
}
.customWrap text{
  font-size: 24rpx;
  color: #101010;
}
.customWrap input{
  width: 100%;
  height: 76rpx;
  background: #F5F5F5;
  color: #909090;
  font-size: 24rpx;
  border-radius: 76rpx;
  padding: 0 30rpx;
  margin-top: 22rpx;
  box-sizing: border-box;
}
.textarea{
  width: 100%;
  height: 180rpx;
  border-radius: 14rpx;
  background: #F5F5F5;
  margin-top: 22rpx;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.footer{
  width: 100%;
  height: 176rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
}
.submitBtn{
  width: 90%;
  height: 76rpx;
  background: #5CA7FE;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 76rpx;
  border-radius: 76rpx;
}