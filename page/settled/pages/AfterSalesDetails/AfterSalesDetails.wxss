@import "/common/tabbar.wxss";
@import "/common/citysel.wxss";
@import "../orderManagement/orderManagement.wxss";
@import "../businessOrderDetails/businessOrderDetails.wxss";

page{
  background:#f4f5f9;
  padding-bottom: 190rpx;
}

.asDBox{
  padding: 25rpx;
}
.asDBoxTipTxt{
  width: 100%;
  font-size: 28rpx;
  padding-bottom: 25rpx;
}
.asDBoxTipDetail{
  padding: 25rpx;
  background: #fff;
  border-radius: 16rpx;
}

.orderBoxContent{
  width: 100%;
  height: 160rpx;
}
.orderBoxContentImg{
  width: 140rpx;
  height: 140rpx;
  float: left;
  border-radius: 15rpx;
}
.orderBoxContentRight{
  width: 500rpx;
  float: right;
  height: 140rpx;
  position: relative;
  font-size: 28rpx;
}
.obcrTop{
  display: flex;
  justify-content:space-between;
}
.obcrBottom{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
.asDBoxTipDelTop{
  font-size: 28rpx;
  padding-bottom: 25rpx;
}
.asDBoxTipDeEve{
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
  padding:25rpx 0;
}
.asDBoxTipDeEveImg{
  width: 126rpx;
  height: 126rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin:0 15rpx 15rpx 0;
}

.AfterSDbottom{
  width: 100%;
  padding-top: 20rpx;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3;
  background: #fff;
  font-size: 24rpx;
  text-align: center;
}
.AfterSDbottomEve{
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  border: 2rpx solid #AAAAAA;
  display: inline-block;
  position: relative;
}
.copyCart{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background:#F4F4F4;
  font-size: 24rpx;
  color: #000;
  height: 40rpx;
  line-height: 40rpx;
  width: 60rpx;
  text-align: center;
  border-radius:6rpx;
}

.addressModifReject{
  width: 500rpx;
  height: 120rpx;
  display: block;
  margin:0 auto 30rpx;
  border: 2rpx solid #BBBBBB;
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 28rpx;
}

.bottomTip{
  width: 100%;
  padding: 20rpx 0;
  font-size: 24rpx;
  text-align: center;
  color: #FF0000;
  background: #fff;
  position: absolute;
  top: -55rpx;
  left: 0;
}