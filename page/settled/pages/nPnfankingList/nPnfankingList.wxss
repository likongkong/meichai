@import "/common/tabbar.wxss";
@import "/common/citysel.wxss";
page{
  background:#f4f5f9;
}
.nPnFLbox{
  width: 100%;
  background: #fff;
  margin-bottom: 130rpx;
}
.nPnFLboxEveBox{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
}
.nPnFLboxEveBox view{
  height: 70rpx;
  line-height: 70rpx;
  float: left;
}

.nPnFLboxTopRule{
  background: #FDEAC1;
  padding:0 25rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #962B1D;
  font-size: 28rpx;
}
.nPnFLboxTopRuleTip{
  float: right;
  height: 70rpx;
  line-height: 70rpx;
}

.nPnFLbEBox{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #F5F5F5;
  
}
.nPnFLbEBox>view{
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  position:relative;
}
.nPnspdetailImg{
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  border-radius: 50%;
}
.nPnspdetailImgShop{
  height: 70rpx;
  width: 70rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

/* 规则弹框 */


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.4);
  z-index: 98;
  display: flex;
  justify-content: center;
  align-items: center;
}
.maskBox{
  width: 668rpx;
  height: auto;
  background: #fff;
  border-radius: 8rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
  position: relative;
}
.maskBoxtitle{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;  
  color: #8A8A8A;
  text-align: center;
}
.maskTxt{
  font-size: 28rpx;
  color: #8A8A8A;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: block;
  margin-bottom: 44rpx;
}

/*  */

.nPnprizeImg{
  width: 450rpx;
  height: auto;
  display: block;
  margin: auto;
}

.nPnprizeName{
  width: 400rpx;
  margin:20rpx auto 0;
  font-size: 28rpx;
  text-align: center;
}
.prizeClose{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 46rpx;
  right: 40rpx;
}

.nPnfankBottom{
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  padding-bottom: 20rpx;
}

.nPnfankBottomClick{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 30rpx;
  margin: auto;
  text-align: center;
  background: #FE5D57;
  font-size: 28rpx;
  color: #fff;
  border-radius: 70rpx;
}

.ViewHistory{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #5CA7FE;
}

.npnRuleBottom{
  padding:0 30rpx 30rpx;
  display: block;
  font-size: 28rpx;
  color: #909090;
}
.npnRuleBottomHead{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  padding: 0 0 20rpx 0;
}
